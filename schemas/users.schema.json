{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/users.schema.json",
  "title": "Users Collection",
  "description": "Schema for user documents in Firestore.",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique Firebase Authentication UID (document ID)."
    },
    "display_name": {
      "type": "string",
      "description": "The user's chosen display name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address."
    },
    "hometown": {
      "type": "string",
      "description": "User's hometown."
    },
    "photo_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to profile photo in Firebase Storage."
    },
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "User's birthday stored as a Firestore timestamp."
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Account creation time (Firestore timestamp)."
    }
  },
  "required": [
    "uid",
    "display_name",
    "email",
    "created_time"
  ],
  "additionalProperties": false
}
